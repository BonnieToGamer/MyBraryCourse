{% extends "../layout/layout.njk" %}
{% block body %}
  <h2>Search Authors</h2>
  <form action="/authors" method="get">
    <label>Name</label><input type="text" name="name" value="{{searchOptions.name}}">
    <button type="submit">Search</button>
  </form>
  <br>
  {% for author in authors %}
    <div>{{author.name}}</div>
  {% endfor %}
{% endblock %}